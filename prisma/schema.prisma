generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
}

model Scorecard {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  repository  String
  timeWindow  Json
  rules       Json

  @@map("scorecards")
}
